<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_num"
        android:layout_marginTop="48dp">

        <Button
            android:id="@+id/btn_1"
            android:layout_column="1"
            android:layout_row="1"
            android:onClick="onInsert"
            android:text="1" />

        <Button
            android:id="@+id/btn_2"
            android:layout_column="2"
            android:layout_row="1"
            android:onClick="onInsert"
            android:text="2" />

        <Button
            android:id="@+id/btn_3"
            android:onClick="onInsert"
            android:text="3" />

        <Button
            android:id="@+id/btn_4"
            android:onClick="onInsert"
            android:text="1" />

        <Button
            android:id="@+id/btn_5"
            android:layout_column="1"
            android:onClick="onInsert"
            android:layout_row="2"
            android:text="5" />

        <Button
            android:id="@+id/btn_6"
            android:onClick="onInsert"
            android:text="6" />

        <Button
            android:id="@+id/btn_7"
            android:onClick="onInsert"
            android:text="7" />

        <Button
            android:id="@+id/btn_8"
            android:onClick="onInsert"
            android:text="8" />

    </GridLayout>

</RelativeLayout>